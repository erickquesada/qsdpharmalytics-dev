# ============================================
# QSD Pharmalytics - Production Environment
# ============================================
#
# INSTRUÇÕES:
# 1. Copie este arquivo: cp .env.production.example .env
# 2. Gere uma SECRET_KEY: openssl rand -hex 32
# 3. Defina uma senha FORTE para POSTGRES_PASSWORD
# 4. Revise todas as configurações abaixo
#

# ============================================
# DATABASE - PostgreSQL
# ============================================
POSTGRES_DB=pharmalitics
POSTGRES_USER=pharmalitics_user
POSTGRES_PASSWORD=MUDE_ESTA_SENHA_PARA_ALGO_FORTE_E_SEGURO

# ============================================
# APPLICATION
# ============================================
APP_NAME=QSDPharmalitics
APP_VERSION=2.0.0
ENVIRONMENT=production
DEBUG=False

# SECRET_KEY: Gere com: openssl rand -hex 32
SECRET_KEY=COLE_AQUI_A_SECRET_KEY_GERADA

# ============================================
# DOMAIN & URLs
# ============================================
DOMAIN=qsdpharma.qsdconnect.cloud
BACKEND_URL=https://qsdpharma.qsdconnect.cloud
FRONTEND_URL=https://qsdpharma.qsdconnect.cloud

# ============================================
# CORS - Cross-Origin Resource Sharing
# ============================================
# Formato JSON com array de strings. Exemplos:
# - Um domínio: ["https://qsdpharma.qsdconnect.cloud"]
# - Múltiplos: ["https://qsdpharma.qsdconnect.cloud","https://outro-dominio.com"]
# - Porta diferente: ["https://qsdpharma.qsdconnect.cloud:8080"]
BACKEND_CORS_ORIGINS=["https://qsdpharma.qsdconnect.cloud"]

# ============================================
# API
# ============================================
API_V1_STR=/api/v1

# ============================================
# SECURITY
# ============================================
# Tempo de expiração dos tokens (em minutos)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=48

# ============================================
# FILE STORAGE
# ============================================
REPORTS_DIR=/app/reports
UPLOADS_DIR=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["csv","xlsx","xls","pdf"]

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=INFO
# SENTRY_DSN=  # Opcional: Configure se usar Sentry

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ============================================
# TIMEZONE
# ============================================
TIMEZONE=America/Sao_Paulo

# ============================================
# EMAIL (Opcional)
# ============================================
# SMTP_TLS=True
# SMTP_PORT=587
# SMTP_HOST=smtp.gmail.com
# SMTP_USER=seu-email@gmail.com
# SMTP_PASSWORD=sua-senha-de-app
