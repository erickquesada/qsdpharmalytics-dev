# QSDPharmalitics Environment Configuration

# Application
APP_NAME=QSDPharmalitics
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters

# Database
DATABASE_URL=postgresql://pharmalitics_user:pharmalitics_pass@localhost:5432/pharmalitics
POSTGRES_SERVER=localhost
POSTGRES_USER=pharmalitics_user
POSTGRES_PASSWORD=pharmalitics_pass
POSTGRES_DB=pharmalitics
POSTGRES_PORT=5432

# Redis Cache
REDIS_URL=redis://:redis_pass@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_pass

# API Configuration
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","https://localhost:3000","http://localhost:8080"]

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=48

# File Storage
REPORTS_DIR=./reports
UPLOADS_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["csv","xlsx","xls","pdf"]

# Email Configuration (Optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=
SMTP_PASSWORD=

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Analytics
ENABLE_ADVANCED_ANALYTICS=true
ML_MODEL_UPDATE_INTERVAL=24  # hours
CACHE_TTL_SECONDS=3600  # 1 hour

# Timezone
TIMEZONE=UTC