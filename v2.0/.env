# Configurações da Aplicação
APP_NAME=QSDPharmalitics
APP_VERSION=2.0.0
DEBUG=true

# Banco de Dados
DATABASE_URL=sqlite:///./pharmalitics.db

# Para PostgreSQL (descomente e configure se necessário)
# POSTGRES_SERVER=localhost
# POSTGRES_USER=pharmalitics_user
# POSTGRES_PASSWORD=your_password_here
# POSTGRES_DB=pharmalitics
# POSTGRES_PORT=5432

# Chave Secreta (MUDE EM PRODUÇÃO!)
SECRET_KEY=your-super-secret-key-change-in-production-2024

# Configurações da API
API_V1_STR=/api/v1

# CORS (em produção, especifique domínios específicos)
BACKEND_CORS_ORIGINS=["*"]

# Configurações de Relatórios
REPORTS_DIR=./reports

# Timezone
TIMEZONE=America/Sao_Paulo

# Configurações de Log
LOG_LEVEL=INFO